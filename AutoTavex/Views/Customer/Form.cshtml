@model AutoTavex.Models.Customer

@{
    ViewBag.Title = "Index";
}

@{
    var helloName = Model.Email;
    if (Model.Name != null)
    {
        helloName = Model.Name;
    }
}


<h2>Hello @helloName</h2>

@using (Html.BeginForm("Save", "Customer", FormMethod.Post)) // ActionName, ControllerName
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    @Html.HiddenFor(c => c.Id)

    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.CNP)
        @Html.TextBoxFor(c => c.CNP, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Email)
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsOver18) Are you over 18?
        </label>
    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

